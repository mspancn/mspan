<div class="container" >
      <!-- Modal -->
      <div class="modal fade" role="dialog" id="student-login-modal" title="用户登录">
          <div class="modal-dialog">
    
            <div class="modal-content">
                <div class="modal-header" style="padding:35px 50px;">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4><span class="fa fa-sign-in"></span> 用户登录 </h4>
                </div>
                <div class="modal-body" style="padding:40px 50px;">
                    <div class="modal-body-content">
                      <%= render "students/shared/login_form" %>
                    </div>
                    <div class="ajax-loader"></div>
                </div>
                <div class="modal-footer">
                      <%= link_to "免费注册", new_registration_path(:student) %><br/>
                      <%= link_to "忘记密码?", new_password_path(:student) %>
                </div>
            </div>
          </div>
      </div>
</div>
