<div class="modal fade" id="student-login-modal" title="用户登录">
  <div class="modal-header">
    <button aria-hidden="true" class="close" data-dismiss="modal" type="button">&times;</button>
    <h4 class="modal-title">用户登录</h4>
  </div>
  <div class="modal-body">
    <div class="modal-body-content">
      <%= form_for(Student.new, as: :student, url: session_path(:student)) do |f| %>
        <div class="field">
          <%= f.label :email, '邮箱' %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :password, '密码' %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <% if Devise.mappings[:student].rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, '记住登录' %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "登录" %>
        </div>
      <% end %>

      <%= render "students/shared/links" %>
    </div>
    <div class="ajax-loader"></div>
  </div>
  <div class="modal-footer">
    <button aria-hidden="true" class="btn modal-close" data-dismiss="modal">取消</button>
  </div>
</div>
