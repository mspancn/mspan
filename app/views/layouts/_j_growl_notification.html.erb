<script type="text/javascript">
  $(document).ready(function() {
    <% flash.each do |key, value| %>
      <% if key == "error" %>
        $.jGrowl('<%= escape_javascript value %>', { theme: 'error' });
      <% elsif key == "alert" %>
        $.jGrowl('<%= escape_javascript value %>', { theme: 'error' });
      <% else %>
        $.jGrowl('<%= escape_javascript value %>');
      <% end %>
    <% end %>
  })
</script>
