<% if @appointment.state.canceled? %>
  $("#cancel-appointment-<%= @appointment.id %>").addClass("hidden");
  $("#balance").html("余额 " + <%= current_student.balance %>);
  $.jGrowl('成功取消预约');
<% end %>

<% if @appointment.state.completed? %>
  $("#complete-appointment-<%= @appointment.id %>").addClass("hidden");
  $.jGrowl('确认完成课程');
<% end %>
