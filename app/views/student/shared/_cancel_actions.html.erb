<div class="text-center">
  <span><%= appointment.scheduled_start.strftime("%m-%d %H:%M") %></span>
</div>

<%= link_to('取消预约',
  student_appointment_path(appointment, state: :canceled),
  method: "put",
  remote: true,
  id: "cancel-appointment-#{appointment.id}",
  class: "btn btn-link",
  data: { confirm: "确定要取消预约么？" }
)%>
