<div class="text-center small">
  <span><%= appointment.scheduled_start.strftime("%a %m-%d %I:%M%P") %></span>
</div>

<%= link_to('Cancel',
  teacher_appointment_path(appointment, state: :canceled),
  method: "put",
  remote: true,
  id: "cancel-appointment-#{appointment.id}",
  class: "btn btn-link",
  data: { confirm: "Are you sure?" }
)%>
